    "/login": {
      "post": {
        "tags": [
          "login"
        ],
        "description": "Para fazer login no sistema, é preciso que primeiro o cliente esteja cadastrado. Será enviado um token jwt após o cadastro que é necessário para login e para realizar transações. Informo que a senha é criptografada antes de entrar no banco de dados com bcrypt, protegendo sua informações.",
        "requestBody": {
          "required": true,
          "content": {
            "application.json": {
              "schema": {
                "type": "object",
                "properties": {
                  "Nome": {
                    "type": "string"
                  },
                  "Senha": {
                    "type": "string"
                  }
                },
                "example": {
                    "Nome": "Gabriel Lambertucci",
                    "Senha": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application.json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "token": {
                      "type": "number"
                    },
                    "Usuario": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJhZG1pbiI6dHJ1ZSwiaWF0IjoxNjU4Njg3NzYxfQ.PaRY9aHGNaF3yKk6tM3b_Avahn4VDVq20CbSO78CYzA",
                    "Usuario": "Gabriel Lambertucci"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Not Found",
            "content": {
              "application.json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": "string"
                  },
                  "example": {
                    "message": "Usuário e/ou senha incorretos"
                  }
                }
              }
            }
          }
        }
      }
    },
